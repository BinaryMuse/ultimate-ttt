<html>
  <head>
    <meta name="csrf-token" content="<%= Phoenix.Controller.get_csrf_token() %>"/>
    <link rel="stylesheet" href="<%= Routes.static_path(UltimateTttWeb.Endpoint, "/css/app.css") %>"/>
    <script defer type="text/javascript" src="<%= Routes.static_path(UltimateTttWeb.Endpoint, "/js/app.js") %>"></script>
  </head>
<body>

<%= if go = game_over(@game) do %>
<!-- TODO -->
<% end %>

<div id="container" class="grid">
  <%= for i <- 0..8 do %>
    <div class="<%= get_outer_cell_classes(@game, i) |> Enum.join(" ") %>">
      <%= for j <- 0..8 do %>
        <div
          class="<%= classes_for_cell(@game, {i, j}) |> Enum.join(" ") %>"
          <%= if is_empty(@game, {i, j}) do %>
            phx-click="place_tile" phx-value-tile="<%= get_player(@game) %>" phx-value-space="<%= get_space({i, j}) %>"
          <% end %>
        >
          <%= content_for_space(@game, {i, j}) %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

</body>
</html>
